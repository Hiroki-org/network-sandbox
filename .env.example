# Network Sandbox Environment Configuration
# Copy this file to .env and customize as needed

# ============================================
# Load Balancer Configuration
# ============================================

# Load balancer image (swap with your custom implementation)
LB_IMAGE=network-sandbox-load-balancer

# Algorithm: round-robin, least-connections, weighted, random
LB_ALGORITHM=round-robin

# Health check interval in seconds
LB_HEALTH_CHECK_SEC=5

# ============================================
# Worker Configuration
# ============================================

# Worker images (swap with your custom implementations)
WORKER_GO_IMAGE=network-sandbox-worker-go
WORKER_RUST_IMAGE=network-sandbox-worker-rust
WORKER_PYTHON_IMAGE=network-sandbox-worker-python

# Enable/disable specific workers (true/false)
ENABLE_GO_WORKERS=true
ENABLE_RUST_WORKERS=true
ENABLE_PYTHON_WORKERS=true

# Number of replicas per worker type
GO_WORKER_REPLICAS=2
RUST_WORKER_REPLICAS=2
PYTHON_WORKER_REPLICAS=2

# Worker ports (internal)
GO_WORKER_1_PORT=8081
GO_WORKER_2_PORT=8082
RUST_WORKER_1_PORT=8083
RUST_WORKER_2_PORT=8084
PYTHON_WORKER_1_PORT=8085
PYTHON_WORKER_2_PORT=8086

# ============================================
# Client Configuration
# ============================================

# Client image (swap with your custom frontend)
CLIENT_IMAGE=network-sandbox-client

# ============================================
# Monitoring Configuration
# ============================================

# Prometheus configuration
PROMETHEUS_PORT=9090

# Grafana configuration
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin123

# ============================================
# Network Configuration
# ============================================

# API port exposed to host
API_PORT=8000

# Client port exposed to host
CLIENT_PORT=3000
